<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Place</th>
    <th>From</th>
    <th>To</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.place %></td>
    <td><%= event.from %></td>
    <td><%= event.to %></td>
    <td><%= event.message %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

